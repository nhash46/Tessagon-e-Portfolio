// Portfolio Section
#portfolio
    - var isVid = false;
    .container
        .section-title.text-center.center
            h2 Portfolio
            //embed(src='https://theprofolio.herokuapp.com/user/document/'+user1.document[0].filename type='application/pdf' width='200' height='400')
            button.btn.btn-primary(type='button' data-toggle='modal' data-target='#editPortfolioModal')
                | Edit Portfolio
            br
            br
            hr
            .clearfix
                .categories
                    ul.cat
                        li
                            ol.type
                                //li
                                //TODO fix data-filter here
                                    a.active(href='#') All
                                li
                                    a.active(href='#portfolio' data-filter='.doc').hideVid Documents
                                li
                                    a(href='#portfolio' data-filter='.vid').showVid Videos
                                li
                                    a(data-filter='.achievements').hideVid Achievements

        .row
            .portfolio-items
                for doc in user1.document
                    .col-sm-6.col-md-3.col-lg-3.doc
                        .portfolio-item
                            .hover-bg
                                a(href='https://theprofolio.herokuapp.com/user/document/'+doc.filename+'?iframe=true&width=1000&height=1000' title=doc.filename rel='prettyPhoto')
                                    .hover-text
                                        h4 #{doc.title}
                                        small #{doc.subHead}
                                    embed(src='https://theprofolio.herokuapp.com/user/document/'+doc.filename + '#toolbar=0&navpanes=0&scrollbar=0' type='application/pdf' width='270' height='300')
                .col-sm-6.col-md-3.col-lg-3.doc
                    .portfolio-item
                        .hover-bg
                            a(href='img/plus.jpg' data-toggle='modal' data-target='#portfolioModal')
                                .hover-text
                                    h4 Add Document
                                embed(src='/img/plus.png' width='255' height='250')
        -//if isVids
            .row
                .portfolio-items
                    for vid in user1.youtubeLinks
                        .col-sm-6.col-md-3.col-lg-3.vid
                            .portfolio-item
                                .hover-bg
                                    a(href=vid.url title= vid.subheading rel='prettyPhoto')
                                        .hover-text
                                            h4 #{vid.title}
                                            small #{vid.subheading}
                                        img.img-responsive(src=vid.thumbnail alt=vid.title)
                                        //iframe(width='420' height='345' src=vid.url)
                    .col-sm-6.col-md-3.col-lg-3.vid
                        .portfolio-item
                            .hover-bg
                                a(href='img/plus.png' data-toggle='modal' data-target='#videoModal')
                                    .hover-text
                                        h4 Add Video
                                    embed(src='/img/plus.png' width='255' height='250')

            .row
                .portfolio-items
                    for achievement in user1.achievement
                        .col-sm-6.col-md-3.col-lg-3.achievements
                            h4 #{achievement.name}
                            br
                            h5 #{achievement.description}
                    .col-sm-6.col-md-3.col-lg-3.achievements
                        a.btn-primary(data-toggle='modal' data-target='#editAchievements') Edit Achievements


