// About Section
#about
    .container
        .section-title.text-center.center
            h2 About Me
            hr
        .row
            .col-md-12.text-center
                if user1.profilePicID
                    .circular
                        img.img-responsive(src='http://localhost:3000/user/image/'+ user1.profilePicID.filename)
                if !user1.profilePicID
