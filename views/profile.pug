#hero.d-flex.flex-column.justify-content-center
    .intro
        if user1.backgroundPicID
            img.background(src='https://theprofolio.herokuapp.com/user/image/' + user1.backgroundPicID.filename alt='no_image')
        if !user1.backgroundPicID
            img.background(src='/img/defaultBackground.jpg' alt='no_image')
        .container
            .row#homescreen
                .intro-text
                    h1.title
                        | Hello, I&apos;m
                        span.name  #{user1.first_name}

                    p
                        |I'm a&nbsp;
                        span.txt-rotate(data-period='1000' data-rotate=user1.typewriterWords)
                    

                    a.btn.btn-default.btn-lg.page-scroll(href='#about') Learn More
                    a.btn.btn-default.btn-lg.page-scroll(href='/blog-posts/'+user.username)#BlogButton View Blogs
                    br
                    br
