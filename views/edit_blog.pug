extends blog-layout

block content
    br
    br
    .container#whiteBGEditBlog
        #blog-title
            h1 #{title}
        form(method='POST', action='/blog-posts/'+user.username+'/edit/'+blog._id)
            #form-group
                label Title:
                input.form-control(name='title', type='text', value=blog.title)
            #form-group
                label Body:
                textarea.form-control(name='body')= blog.body
            br
            input.btn.btn-primary(type='submit', value='Submit')
            