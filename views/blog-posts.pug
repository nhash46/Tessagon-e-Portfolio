extends layout

block content
    #jumbotronBlog
        .header#discussion-header
            if !searchQuery
                h1 #{title}
            if searchQuery
                .search-header
                    if searchQuery
                        h4 showing search results for: 
                        #discussion-header    
                            h1 '#{searchQuery}'
        
        .row
            .leftcolumn
                if noMatch
                    .card#noMatch
                        h5 Sorry, there were no community results for "#{searchQuery}". Try search again!
                        
                if !noMatch
                    each blog, i in blogs
                        .panel
                            .panel-body#blog-card
                                #blog-title
                                    h2 #{blog.title}
                                h6 posted by #{blog.author}, #{moment(blog.date).startOf('day').fromNow()}
                                p #{blog.body}
                            .panel-footer#blog-link
                                a(href='/blog-posts/'+blog._id)
                                    h4 click here to view
                        
            .rightcolumn#blog
                .card#signin-createpost
                    if user
                        input.btn.btn-primary(type='submit', value='Create a post', onclick='createPost()')
                    if !user
                            input.btn.btn-primary(type='submit', value='Sign in to create a post!', onclick='signIn()')

                .card#search
                    form.form-inlne(action="/blog-posts" method="GET")
                        div.form-group
                            input.form-control#normalfont(name='search', type='text', placeholder= 'Blog search...' class='form-control')
                            input.btn.btn-primary(type='submit', value='Search')

                    script.
                        function createPost() {
                            window.location.href = '/blog-posts/submit'
                        }
                        function signIn() {
                            window.location.href = '/user/login'
                        }

        script.
            function move() {
            window.location.href = '/blog-posts/submit'
            }            