// Header
header#header.d-flex.flex-column.justify-content-center
    nav.nav-menu
        ul.nav
            // Hidden li included to remove active class from about link when scrolled up past about section
            li.active
                a.page-scroll(href='#hero').text-center
                    i.fa.fa-home.navbar-icons
                        span Home
            li
                a.page-scroll(href='#about').text-center
                    i.fa.fa-user.navbar-icons
                        span About
            li
                a.page-scroll(href='#skills').text-center
                    i.fa.fa-rocket.navbar-icons
                        span skills
            li
                a.page-scroll(href='#portfolio').text-center
                    i.fa.fa-suitcase.navbar-icons
                        span Portfolio
            li
                a.page-scroll(href='#experience').text-center
                    i.fa.fa-fire.navbar-icons
                        span Experience
            li
                a.page-scroll(href='#education').text-center
                    i.fa.fa-graduation-cap.navbar-icons
                        span Education
            li
                a.page-scroll(href='#contact').text-center
                    i.fa.fa-address-card.navbar-icons
                        span Contact

#hero.d-flex.flex-column.justify-content-center
    .intro
        if user2.backgroundPicID
            img.background(src='http://localhost:3000/user/image/' + user2.backgroundPicID.filename alt='no_image')
        if !user2.backgroundPicID
            img.background(src='/img/profolio-tight.png' alt='no_image')
        .container
            .row#homescreen
                .intro-text
                    h1.title
                        | Hello, I&apos;m
                        span.name  #{user2.first_name}

                    p
                        |I'm a
                        span.txt-rotate(data-period='1000' data-rotate='[ " Designer.", " Developer.", " Typewriter!" ]')


                    a.btn.btn-default.btn-lg.page-scroll(href='#about') Learn More


#nav
    nav.navbar.navbar-custom
        .container
            .navbar-header
                button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-main-collapse')
                    i.fa.fa-bars
                img(src="https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png", alt="", width = "50vh")
            //TODO add an "IF LOGGED IN HERE"
            // a.navbar-brand.page-scroll(href='#page-top') #{user2.first_name} #{user2.last_name}
            // Collect the nav links, forms, and other content for toggling
            .collapse.navbar-collapse.navbar-right.navbar-main-collapse
                ul.nav.navbar-nav
                    li.topnavbar
                        // if user change this to edit..
                        a.btn(href='/user/logout') Logout
                    li.topnavbar
                        a.button.btn(type='button' data-toggle='modal' data-target='#contactModal') Edit Account Details
                
                    
// About Section
#about
    .container
        .section-title.text-center.center
            h2 About Me
            hr
        .row
            .col-md-12.text-center
                if user2.profilePicID
                    img.img-responsive(src='http://localhost:3000/user/image/'+ user2.profilePicID.filename)
                if !user2.profilePicID
                    img.img-responsive(src='' alt='No Profile Picture')
            .col-md-8.col-md-offset-2
                .about-text
                    p
                        | #{user2.bio}
                    .text-center
                        a.btn.btn-primary(href='#')
                            i.fa.fa-download
                            |  Download Resume

// Skills Section
#skills.text-center
    .container
        .section-title.center
            h2 Skills
            hr
        .row
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='95')
                    span.percent 95
                h4 HTML5
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='85')
                    span.percent 85
                h4 CSS3
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='80')
                    span.percent 80
                h4 jQuery
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='80')
                    span.percent 80
                h4 WordPress
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='70')
                    span.percent 70
                h4 Photoshop
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='65')
                    span.percent 65
                h4 Illustrator

#portfolio
    .container
        .section-title.text-center.center
            h2 Portfolio
            //embed(src='http://localhost:3000/user/document/'+user1.document[0].filename type='application/pdf' width='200' height='400')
            hr
            .clearfix
        .row
            .portfolio-items
                for doc in user2.document
                    .col-sm-6.col-md-3.col-lg-3.web
                        .portfolio-item
                            .hover-bg
                                a(href='preview/route' title=doc.filename rel='prettyPhoto')
                                    .hover-text
                                        h4 #{doc.title}
                                        small #{doc.subHead}
                                    embed(src='http://localhost:3000/user/document/'+doc.filename type='application/pdf' width='300' height='300' )


// Resume Section
#experience.text-center
    .container
        .section-title.center
            h2 Experience

            br
            br
            hr
        .row
            .col-lg-12
                ul.timeline
                    for c in user2.experience
                        li
                            .timeline-image
                                h4
                                    span.dateSize #{moment(c.experienceStartDate).format('LL')}
                                    |
                                    br
                                    .dateSize                 To
                                    span.dateSize #{moment(c.experienceEndDate).format('LL')}
                            .timeline-panel
                                .timeline-heading
                                    h4
                                        span #{c.company}
                                    h4.subheading
                                        span #{c.role}
                                .timeline-body
                                    p
                                        | INSERT YOUR DESCRIPTION HERE !
                                    br

// Education section
#education.text-center
    .container
        .section-title.center
            h2 Education
            br
            br
            hr
        .row
            .col-lg-12
                ul.timeline
                    for c in user2.education
                        li.timeline-inverted
                            .timeline-image
                                h4
                                    span.dateSize #{moment(c.educationStartDate).format('LL')}
                                    |
                                    br
                                    .dateSize                 To
                                    span.dateSize #{moment(c.educationEndDate).format('LL')}
                            .timeline-panel
                                .timeline-heading
                                    h4
                                        span #{c.university}
                                    h4.subheading
                                        span #{c.degree}
                                .timeline-body
                                    p
                                        | INSERT YOUR DESCRIPTION HERE !
                                    br


// Contact Section
#contact.text-center
    .container
        .section-title.center
            h2 Contact
            br
            br
            hr
        .col-md-8.col-md-offset-2
            .col-md-4
                i.fa.fa-map-marker.fa-2x
                p #{user2.city}, #{user2.state}
            .col-md-4
                i.fa.fa-envelope-o.fa-2x
                p #{user2.email}
            .col-md-4
                i.fa.fa-phone.fa-2x
                p  #{user2.phone}
            .clearfix
        .col-md-8.col-md-offset-2
            h3 Leave me a message

            .social
                ul
                    li
                        a(href='#')
                            i.fa.fa-facebook
                    li
                        a(href='#')
                            i.fa.fa-twitter
                    li
                        a(href='#')
                            i.fa.fa-github
                    li
                        a(href='#')
                            i.fa.fa-instagram
                    li
                        a(href='#')
                            i.fa.fa-linkedin


#footer
    .container.text-center
        .fnav
            p
                | Tessagon
        .social
            ul
                li
                    iframe#down(src='https://www.facebook.com/plugins/share_button.php?href=https://tessagon-e-portfolio.herokuapp.com/user/profile/'+ user2.username + '%2F&layout=button&size=small&width=67&height=20&appId'  width='77' height='28' style='border:none;overflow:hidden' scrolling='no' frameborder='0' allowtransparency='true' allow='encrypted-media')
                    script(type='IN/Share' data-url='https://tessagon-e-portfolio.herokuapp.com/user/profile/'+ user2.username)
