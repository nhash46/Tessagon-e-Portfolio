// Header
header#header
    .intro
        .container
            .row
                .intro-text
                    h1
                        | Hello, I&apos;m
                        span.name  #{user2.first_name}
                    p 
                        |I'm a  
                        span.txt-rotate(data-period='1000' data-rotate='[ "Designer.", "Developer.", "Typewriter!" ]')

                    a.btn.btn-default.btn-lg.page-scroll(href='#about') Learn More
// Navigation
#nav
    nav.navbar.navbar-custom
        .container
            .navbar-header
                button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-main-collapse')
                    i.fa.fa-bars
                a.navbar-brand.page-scroll(href='#page-top') #{user2.first_name} #{user2.last_name}
            // Collect the nav links, forms, and other content for toggling
            .collapse.navbar-collapse.navbar-right.navbar-main-collapse
                ul.nav.navbar-nav
                    // Hidden li included to remove active class from about link when scrolled up past about section
                    li.hidden
                        a(href='#page-top')
                    li
                        a.page-scroll(href='#about') About
                    li
                        a.page-scroll(href='#skills') Skills
                    li
                        a.page-scroll(href='#portfolio') Portfolio
                    li
                        a.page-scroll(href='#experience') Experience
                    li
                        a.page-scroll(href='#education') Education
                    li
                        a.page-scroll(href='#contact') Contact
                    li
                        // if user change this to edit.. 
                        a.page-scroll(href='/') Login
                
                    
// About Section
#about
    .container
        .section-title.text-center.center
            h2 About Me
            hr
        .row
            .col-md-12.text-center
                img.img-responsive(src='img/about.jpg')
            .col-md-8.col-md-offset-2
                .about-text
                    p
                        | #{user2.bio}
                    p.text-center
                        a.btn.btn-primary(href='#')
                            i.fa.fa-download
                            |  Download Resume
// Skills Section
#skills.text-center
    .container
        .section-title.center
            h2 Skills
            hr
        .row
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='95')
                    span.percent 95
                h4 HTML5
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='85')
                    span.percent 85
                h4 CSS3
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='80')
                    span.percent 80
                h4 jQuery
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='80')
                    span.percent 80
                h4 WordPress
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='70')
                    span.percent 70
                h4 Photoshop
            .col-md-4.col-sm-6.skill
                span.chart(data-percent='65')
                    span.percent 65
                h4 Illustrator
// Portfolio Section
#portfolio
    .container
        .section-title.text-center.center
            h2 Portfolio
            hr
            .clearfix
        .row
            .portfolio-items
                .col-sm-6.col-md-3.col-lg-3.web
                    .portfolio-item
                        .hover-bg
                            a(href='img/portfolio/01-large.jpg' title='Project description' rel='prettyPhoto')
                                .hover-text
                                    h4 Project Title
                                    small Web Design
                                img.img-responsive(src='img/portfolio/01-small.jpg' alt='Project Title')
                .col-sm-6.col-md-3.col-lg-3.app
                    .portfolio-item
                        .hover-bg
                            a(href='img/portfolio/02-large.jpg' title='Project description' rel='prettyPhoto')
                                .hover-text
                                    h4 Project Title
                                    small App Development
                                img.img-responsive(src='img/portfolio/02-small.jpg' alt='Project Title')
                .col-sm-6.col-md-3.col-lg-3.web
                    .portfolio-item
                        .hover-bg
                            a(href='img/portfolio/03-large.jpg' title='Project description' rel='prettyPhoto')
                                .hover-text
                                    h4 Project Title
                                    small Web Design
                                img.img-responsive(src='img/portfolio/03-small.jpg' alt='Project Title')
                .col-sm-6.col-md-3.col-lg-3.web
                    .portfolio-item
                        .hover-bg
                            a(href='img/portfolio/04-large.jpg' title='Project description' rel='prettyPhoto')
                                .hover-text
                                    h4 Project Title
                                    small Web Design
                                img.img-responsive(src='img/portfolio/04-small.jpg' alt='Project Title')
                .col-sm-6.col-md-3.col-lg-3.app
                    .portfolio-item
                        .hover-bg
                            a(href='img/portfolio/05-large.jpg' title='Project description' rel='prettyPhoto')
                                .hover-text
                                    h4 Project Title
                                    small App Development
                                img.img-responsive(src='img/portfolio/05-small.jpg' alt='Project Title')
                .col-sm-6.col-md-3.col-lg-3.branding
                    .portfolio-item
                        .hover-bg
                            a(href='img/portfolio/06-large.jpg' title='Project description' rel='prettyPhoto')
                                .hover-text
                                    h4 Project Title
                                    small Branding
                                img.img-responsive(src='img/portfolio/06-small.jpg' alt='Project Title')
                .col-sm-6.col-md-3.col-lg-3.branding.app
                    .portfolio-item
                        .hover-bg
                            a(href='img/portfolio/07-large.jpg' title='Project description' rel='prettyPhoto')
                                .hover-text
                                    h4 Project Title
                                    small App Development, Branding
                                img.img-responsive(src='img/portfolio/07-small.jpg' alt='Project Title')
                .col-sm-6.col-md-3.col-lg-3.web
                    .portfolio-item
                        .hover-bg
                            a(href='img/portfolio/08-large.jpg' title='Project description' rel='prettyPhoto')
                                .hover-text
                                    h4 Project Title
                                    small Web Design
                                img.img-responsive(src='img/portfolio/08-small.jpg' alt='Project Title')
// Resume Section
#experience.text-center
    .container
        .section-title.center
            h2 Experience
            
            br
            br
            hr
        .row
            .col-lg-12
                ul.timeline
                    for c in user2.experience
                        li
                            .timeline-image
                                h4
                                    span #{(c.experienceStartDate)}
                                    |
                                    br
                                    |                 -
                                    br
                                    span #{c.experienceEndDate}
                            .timeline-panel
                                .timeline-heading
                                    h4
                                        span #{c.company}
                                    h4.subheading
                                        span #{c.role}
                                .timeline-body
                                    p
                                        | INSERT YOUR DESCRIPTION HERE !
                                    br
                                    button.btn.btn-primary(type='button' data-toggle='modal' data-target='#experienceModal')
                                        | Edit Experience
// Education section                   
#education.text-center
    .container
        .section-title.center
            h2 Education
            br
            br
            hr
        .row
            .col-lg-12
                ul.timeline
                    for c in user2.education
                        li.timeline-inverted
                            .timeline-image
                                h4
                                    span #{(c.educationStartDate)}
                                    |
                                    br
                                    |                 -
                                    br
                                    span #{c.educationEndDate}
                            .timeline-panel
                                .timeline-heading
                                    h4
                                        span #{c.university}
                                    h4.subheading
                                        span #{c.degree}
                                .timeline-body
                                    p
                                        | INSERT YOUR DESCRIPTION HERE !
                                    br
                                    button.btn.btn-primary(type='button' data-toggle='modal' data-target='#educationModal')
                                        | Edit Education
// Contact Section
#contact.text-center
    .container
        .section-title.center
            h2 Contact
            hr
        .col-md-8.col-md-offset-2
            .col-md-4
                i.fa.fa-map-marker.fa-2x
                p #{user2.city}, #{user2.state}
            .col-md-4
                i.fa.fa-envelope-o.fa-2x
                p #{user2.email}
            .col-md-4
                i.fa.fa-phone.fa-2x
                p  #{user2.phone}
            .clearfix
        .col-md-8.col-md-offset-2
            h3 Leave me a message
            form#contactForm(name='sentMessage' novalidate='')
                .row
                    .col-md-6
                        .form-group
                            input#name.form-control(type='text' placeholder='Name' required='required')
                            p.help-block.text-danger
                    .col-md-6
                        .form-group
                            input#email.form-control(type='email' placeholder='Email' required='required')
                            p.help-block.text-danger
                .form-group
                    textarea#message.form-control(name='message' rows='4' placeholder='Message' required='')
                    p.help-block.text-danger
                #success
                button.btn.btn-default(type='submit') Send Message
            .social
                ul
                    li
                        a(href='#')
                            i.fa.fa-facebook
                    li
                        a(href='#')
                            i.fa.fa-twitter
                    li
                        a(href='#')
                            i.fa.fa-github
                    li
                        a(href='#')
                            i.fa.fa-instagram
                    li
                        a(href='#')
                            i.fa.fa-linkedin
#footer
    .container.text-center
        .fnav
            p
                | Tessagon
